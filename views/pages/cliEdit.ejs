<!doctype html>
<html lang="pt-br">
  <head>
        <title>Editar Cliente</title>
        <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <% if (tb_cliente) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-primary">
                <h4 class="text-white">Editar Cliente: <%= tb_cliente.cli_nome %></h4>
            </div>
            <div class="card-body">
                <form action="/updateCli" method="POST">                    
                    <input type="text" name="id" id="id" value="<%= tb_cliente.cli_id %>" hidden>
                    <div class="mb-3">
                        <label for="user" class="form-label">Nome Cliente</label>
                        <input type="text" class="form-control" id="nomeCli" name="nomeCli" tabindex="1" value="<%= tb_cliente.cli_nome %>">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Apelido</label>
                        <input type="text" class="form-control" id="apelidoCli" name="apelidoCli" tabindex="2" value="<%= tb_cliente.cli_apelido %>">
                    </div>                    
                    <div class="row">
                        <div class="mb-3">
                            <label for="user" class="form-label">CPF</label>
                            <input type="text" class="form-control" id="cpfCli" name="cpfCli" tabindex="3" value="<%= tb_cliente.cli_cpf %>">
                        </div>                       
                        <div class="mb-3 col-lg-6 col-md-12">
                            <label for="user" class="form-label">CNPJ</label>
                            <input type="text" class="form-control" id="cnpjCli" name="cnpjCli" tabindex="4" value="<%= tb_cliente.cli_cnpj %>">
                        </div>
                    </div>
                    <div class="mb-3 col-lg-6 col-md-12">
                        <label for="user" class="form-label">Endereco</label>
                        <input type="text" class="form-control" id="endCli" name="endCli" tabindex="5" value="<%= tb_cliente.cli_endereco %>">
                    </div>   
                    <div class="row">
                        <div class="mb-3 col-lg-6 col-md-12">
                            <label for="user" class="form-label">Bairro</label>
                            <input type="text" class="form-control" id="bairroCli" name="bairroCli" tabindex="6" value="<%= tb_cliente.cli_bairro %>">
                        </div> 
                        <div class="mb-3 col-lg-6 col-md-12">
                            <label for="user" class="form-label">CEP</label>
                            <input type="text" class="form-control" id="cepCli" name="cepCli" tabindex="7" value="<%= tb_cliente.cli_cep %>">
                        </div>
                    </div>
                    <div class="row">     
                        <div class="mb-3 col-lg-6 col-md-12">
                            <label for="user" class="form-label">Telefone</label>
                            <input type="text" class="form-control" id="telefoneCli" name="telefoneCli" tabindex="8" value="<%= tb_cliente.cli_telefone %>">
                        </div> 
                        <div class="mb-3 col-lg-6 col-md-12">
                            <label for="user" class="form-label">Celular</label>
                            <input type="text" class="form-control" id="celularFunc" name="celularFunc" tabindex="9" value="<%= tb_cliente.cli_celular %>">
                        </div>
                    </div>     
                     <button type="submit" class="btn btn-info" tabindex="10" title="Salvar">
                        <i class="bi bi-save"></i> 
                    </button>     
                    <a href="/clientes" class="btn btn-secondary" tabindex="11" title="Voltar">
                        <i class="bi bi-arrow-return-left"></i>
                    </a>     
                </form>
            </div>
        </div>    
    </div>
    <% } %>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>  
   </body>
</html>
