<!doctype html>
<html lang="pt-br">
  <head>
        <title>Editar Usuário</title>
        <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <% if (tb_funcionario) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-primary">
                <h4 class="text-white">Dados completos do Funcionário ID: <%= tb_funcionario.func_id %></h4>
            </div>
            <div class="card-body">
                    <div class="mb-3">
                        <p><strong>Funcionário: </strong><%= tb_funcionario.func_nome %></p>
                    </div>
                    <div class="mb-3">
                        <p><strong>CTPS: </strong><%= tb_funcionario.func_ctps %></p>
                    </div>
                    <div class="mb-3 ">
                        <p><strong>RG: </strong><%= tb_funcionario.func_rg %></p>
                    </div>
                    <div class="mb-3 ">
                        <p><strong>CPF: </strong><%= tb_funcionario.func_cpf %></p>
                    </div>  
                    <div class="mb-3">
                        <p><strong>Endereço: </strong><%= tb_funcionario.func_endereco %></p>
                    </div> 
                    <div class="mb-3 ">
                        <p><strong> Bairro: </strong><%= tb_funcionario.func_bairro %></p>
                    </div> 
                    <div class="mb-3 ">
                        <p><strong>CEP: </strong><%= tb_funcionario.func_cep %></p>
                    </div>    
                    <div class="mb-3">
                        <p><strong>Status: </strong><%= tb_funcionario.func_status %></p>
                    </div> 
                    <div class="mb-3 ">
                        <p><strong>Salario: </strong><%= tb_funcionario.func_salario %></p>
                    </div>     
                    <div class="mb-3">
                        <p><strong>Cargo: </strong><%= tb_funcionario.func_cargo %></p>
                    </div> 
                    <div class="mb-3">
                        <p><strong>Entrada: </strong><%= tb_funcionario.func_entrada %></p>
                    </div> 
                    <div class="mb-3">
                        <p><strong>Saida: </strong><%= tb_funcionario.func_saida %></p>
                    </div>   
                    <a href="/funcEdit/<%= tb_funcionario.func_id %>" class="btn btn-primary" tabindex="1" title="Editar">
                        <i class="bi bi-pencil-fill"></i> 
                    </a>     
                    <a href="/funcionarios" class="btn btn-secondary" tabindex="2" title="Voltar">
                        <i class="bi bi-arrow-return-left"></i>
                    </a>     
            </div>
        </div>    
    </div>
    <% } %>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>  
   </body>
</html>
