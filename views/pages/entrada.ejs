<!doctype html>
<html lang="pt-br">

<head>
  <title>Entrada</title>
  <%- include('../partials/head'); %>
</head>

<body>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <div class="container">
    <a href="/entCreate" class="btn btn-outline-success mt-4">
      <i class="bi bi-plus-circle-fill" style="font-size:30px;"></i>
    </a>
    <table id="entrada" class="table table-bordered table-striped text-center md-4">
      <thead>
        <tr class="bg-success text-white">
          <th scope="col">ID</th>
          <th scope="col">Cliente</th>
          <th scope="col">Motorista</th>
          <th scope="col">Valor</th>
          <th scope="col">Data</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach((tb_pedido)=> { %>
          <tr>
            <td>
              <a href="/entGet/<%= tb_pedido.ped_id %>" class="btn btn-sm btn-outline-secondary" title="Visualizar">
                <i class="bi bi-eye-fill"></i>
              </a><br>
              <%= tb_pedido.ped_id %>
            </td>
            <td>
              <%= tb_pedido.cli_id %>
            </td>
            <td>
              <%= tb_pedido.motorista_id %>
            </td>
            <td>
              <%= tb_pedido.ped_valor %>
            </td>
            <td>
              <%= tb_pedido.ped_data %>
            </td>
            <td>
              <a href="/entEdit/<%= tb_pedido.ped_id %>" class="btn btn-outline-secondary" title="Editar">
                <i class="bi bi-pencil-fill"></i>
              </a>
              <a class="btn btn-outline-danger" onclick="confirmar(' <%= tb_pedido.ped_id %>' )" title="Apagar">
                <i class="bi bi-trash-fill"></i>
              </a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>

  <script>
    $(document).ready(function() {
    $('#entrada').DataTable();
} );
    function confirmar(id) {
      Swal.fire({
        title: 'Tem certeza que deseja apagar Entrada?',
        text: "Você não poderá reverter isso.",
        icon: 'warning',
        showDenyButton: true,
        confirmButtonColor: '#ff0000',
        denyButtonColor: '#8d8d8d',
        denyButtonText: 'Cancelar',
        confirmButtonText: 'Apagar'
      }).then((result) => {
        if (result.isConfirmed) {
          window.location = '/entDel/' + id;
        }
      })
    }
  </script>
</body>

</html>