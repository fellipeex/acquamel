<!doctype html>
<html lang="pt-br">
  <head>
        <title>Editar Usuário</title>
        <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <% if (tb_saida) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-danger">
                <h4 class="text-white">Dados completos da Saída ID: <%= tb_saida.saida_id %></h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <p><strong>ID: </strong><%= tb_saida.saida_id %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Nome Saída: </strong><%= tb_saida.saida_nome %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Valor: </strong><%= tb_saida.saida_valor %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Data: </strong><%= tb_saida.saida_data %></p>
                </div> 
                <div class="mb-3">
                    <p><strong>Obs.: </strong><%= tb_saida.saida_obs %></p>
                </div> 
                <a href="/saidaEdit/<%= tb_saida.saida_id %>" class="btn btn-danger" tabindex="1" title="Editar">
                    <i class="bi bi-pencil-fill"></i> 
                </a>     
                <a href="/saida" class="btn btn-secondary" tabindex="2" title="Editar">
                    <i class="bi bi-arrow-return-left"></i>
                </a>     
            </div>
        </div>    
    </div>
    <% } %>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>  
   </body>
</html>
