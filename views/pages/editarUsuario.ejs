<!doctype html>
<html lang="pt-br">
  <head>
        <title>Editar Usuário</title>
        <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <% if (tb_usuario) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-primary">
                <h4 class="text-white">Editar Usuário: <%= tb_usuario.u_nome %></h4>
            </div>
            <div class="card-body">
                <form action="/updateUsr" method="POST">
                    <input type="text" name="id" id="id" value="<%= tb_usuario.u_id %>" hidden>
                    <div class="mb-3">
                        <label for="user" class="form-label">Usuário</label>
                        <input type="text" class="form-control" id="user" name="user" tabindex="1" value="<%= tb_usuario.u_nome %>">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" name="email" tabindex="2" value="<%= tb_usuario.u_email %>">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Senha</label>
                        <input type="text" class="form-control" id="senha" name="senha" tabindex="3" value="<%= tb_usuario.u_senha %>">
                    </div> 
                    <div class="mb-3">
                        <label for="user" class="form-label">Classe</label>
                        <select id="classe" name="classe" class="form-select"  tabindex="4"> 
                            <option <%= tb_usuario.u_class=='admin' ? "selected" : '' %> value="admin">Admin</option>
                            <option <%= tb_usuario.u_class=='comum' ? "selected" : '' %> value="comum">Comum</option>
                        </select>    
                    </div> 
                    <div class="mb-3">
                        <label for="user" class="form-label">Foto</label>
                        <input type="text" class="form-control" id="foto" name="foto" tabindex="5" value="<%= tb_usuario.u_foto %>">
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="6" title="Salvar">
                        <i class="bi bi-save"></i> 
                    </button>     
                    <a href="/usuarios" class="btn btn-secondary" tabindex="7" title="Voltar">
                        <i class="bi bi-arrow-return-left"></i>
                    </a>    
                </form>
            </div>
        </div>    
    </div>
    <% } %>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>  
   </body>
</html>
