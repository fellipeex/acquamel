<!doctype html>
<html lang="pt-br">
  <head>
        <title>Visualiar Entrada</title>
        <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <% if (tb_pedido) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-success">
                <h4 class="text-white">Dados completos da Entrada ID: <%= tb_pedido.ped_id %></h4>
            </div>
            
            <div class="card-body">
                <div class="mb-3">
                    <p><strong>ID: </strong><%= tb_pedido.ped_id %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Nome Entrada: </strong><%= tb_pedido.ped_nome %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Id Caminh√£o: </strong><%= tb_pedido.cam_id %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Id Cliente: </strong><%= tb_pedido.cli_id %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Id Vendedor: </strong><%= tb_pedido.vendedor_id %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Id Motorista: </strong><%= tb_pedido.motorista_id %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Valor: </strong><%= tb_pedido.ped_valor %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Quantidade: </strong><%= tb_pedido.ped_qtd %></p>
                </div> 
                <div class="mb-3">
                    <p><strong>Total: </strong><%= tb_pedido.total %></p>
                </div>
                <div class="mb-3">
                    <p><strong>Data: </strong><%= tb_pedido.ped_data %></p>
                </div>  
                <div class="mb-3">
                    <p><strong>Obs.: </strong><%= tb_pedido.ped_obs %></p>
                </div> 

                <a href="/entEdit/<%= tb_pedido.ped_id %>" class="btn btn-success" tabindex="1" title="Editar">
                    <i class="bi bi-pencil-fill"></i> 
                </a>     
                <a href="/entrada" class="btn btn-secondary" tabindex="2" title="Editar">
                    <i class="bi bi-arrow-return-left"></i>
                </a>     
            </div>
        </div>    
    </div>
    <% } %>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>  
   </body>
</html>
