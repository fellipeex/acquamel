<!doctype html>
<html lang="pt-br">
  <head>
        <title>Criar Saída</title>
        <!-- Required meta tags -->
        <%- include('../../partials/head'); %>
  </head>
  <body>
    <header>
        <%- include('../../partials/header'),{nomeUsr:nomeUsr}; %>
    </header>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-danger">
                <h4 class="text-white">Nova Saída</h4>
            </div>
            <div class="card-body">
                <form action="/setSaida" method="POST">
                    <div class="mb-3">
                        <label for="saida" class="form-label">Nome Saída:</label>
                        <input type="text" class="form-control" id="nomeSaida" name="nomeSaida" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="saida" class="form-label">Categoria:</label>
                        <input type="text" class="form-control" id="categoriaSaida" name="categoriaSaida" tabindex="2">
                    </div>
                        <div class="row">
                        <div class="mb-3 col-md-6 col-sm-12">
                            <label for="saida" class="form-label">Valor:</label>
                            <input type="text" class="form-control" id="valorSaida" name="valorSaida" tabindex="3">
                        </div>
                        <div class="mb-3 col-md-6 col-sm-12">
                            <label for="saida" class="form-label">Data:</label>
                            <input type="date" class="form-control" id="dataSaida" name="dataSaida" tabindex="4">
                        </div> 
                    </div>    
                    <div class="mb-3">
                        <label for="saida" class="form-label">Obs.:</label>
                        <input type="text" class="form-control" id="obsSaida" name="obsSaida" tabindex="5">  
                    </div> 
                    <a href="/saidas" class="btn btn-secondary" tabindex="6" title="Voltar">
                        <i class="bi bi-arrow-return-left"></i>
                    </a>
                    <button type="submit" class="btn btn-danger" tabindex="7" title="Salvar">
                        <i class="bi bi-save"></i> 
                    </button>     
                </form>
            </div>
        </div>    
    </div>
    <footer>
      <%- include('../../partials/footer'); %>
    </footer>
       
  </body>
</html>
