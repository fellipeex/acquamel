<!doctype html>
<html lang="pt-br">
  <head>
        <title>Editar Usuário</title>
        <%- include('../partials/head'); %>
  </head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
    <% if (tb_caminhao) { %>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-warning">
                <h4 class='text-white'>Editar Caminhão ID: <%= tb_caminhao.cam_id %> </h4>
            </div> 
            <div class="card-body">
                <form action="/updateCam" method="POST">
                    <input type="text" name="id" id="id" value="<%= tb_caminhao.cam_id %>" hidden>
                    <div class="mb-3">
                        <label for="user" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="nomeCam" name="nomeCam" tabindex="1" value="<%=tb_caminhao.cam_nome %>">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Placa</label>
                        <input type="text" class="form-control" id="placaCam" name="placaCam" tabindex="2" value="<%=tb_caminhao.cam_placa %>">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Tamanho</label>
                        <input type="text" class="form-control" id="tamanhoCam" name="tamanhoCam" tabindex="3" value="<%=tb_caminhao.cam_tamanho %>">
                    </div> 
                    <div class="mb-3">
                        <label for="user" class="form-label">Ano</label>
                        <input type="text" class="form-control" id="anoCam" name="anoCam" tabindex="3" value="<%=tb_caminhao.cam_ano %>">
                    </div> 
                    <div class="mb-3">
                        <label for="caminhao" class="form-label">RENAVAM</label>
                        <input type="text" class="form-control" id="renavam" name="renavam" tabindex="5" value="<%=tb_caminhao.cam_renavam %>">
                    </div>
                    <button type="submit" class="btn btn-warning" tabindex="6" title="Salvar">
                        <i class="bi bi-save"></i> 
                    </button>     
                    <a href="/caminhoes" class="btn btn-secondary" tabindex="7" title="Voltar">
                        <i class="bi bi-arrow-return-left"></i>
                    </a>     
                </form>
            </div>
        </div>    
    </div>
    <% } %>
    <footer>
      <%- include('../partials/footer'); %>
    </footer>  
   </body>
</html>
