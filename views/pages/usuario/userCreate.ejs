<!doctype html>
<html lang="pt-br">
  <head>
        <title>Index</title>
        <!-- Required meta tags -->
        <%- include('../../partials/head'); %>
  </head>
  <body>
    <header>
        <%- include('../../partials/header'),{nomeUsr:nomeUsr}; %>
    </header>
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header bg-primary">
                <h4 class="text-white">Novo Usuário</h4>
            </div>
            <div class="card-header">Novo Usuário</div>
            <div class="card-body">
                <form action="/setUsr" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome Usuário</label>
                        <input type="text" class="form-control" id="nome" name="nome" tabindex="1" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" name="email" tabindex="2" required>
                    </div>
                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha</label>
                        <input type="text" class="form-control" id="senha" name="senha" tabindex="3" required>
                    </div> 
                    <div class="mb-3">
                        <label for="classe" class="form-label">Classe</label>
                        <select id="classe" name="classe" class="form-select"  tabindex="4" required>
                            <option value="admin">Admin</option>
                            <option value="comum">Comum</option>
                        </select>    
                    </div> 
                    <div class="mb-3">
                        <label for="foto" class="form-label">Foto</label>
                        <input  type="file" class="form-control" id="foto" name="foto" tabindex="5" required>
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="6" title="Salvar">
                        <i class="bi bi-save"></i> 
                    </button>     
                    <a href="/usuarios" class="btn btn-secondary" tabindex="7" title="Voltar">
                        <i class="bi bi-arrow-return-left"></i>
                    </a>      
                </form>
            </div>
        </div>    
    </div>
    <footer>
      <%- include('../../partials/footer'); %>
    </footer>
 
  </body>
</html>
