                        <strong>Ultimo Login: </strong>
                        <p class="pe" id="last-login"><%= usu.u_last_login%></p>
                    </div>
                    <div class="linha">
                        <strong>Foto: </strong>
                        <img class="pe" id="foto" src="<%= usu.u_foto%>">
                    </div>
                    <div class="linha">
                        <strong>Senha: </strong>
                        <p class="pe" id="senha"><%= usu.u_senha%></p>
                    </div>
                    <a href="/editarUsuario/<%= id %>" class="btn btn-primary" tabindex="1" title="Editar">
                        <i class="bi bi-pencil-fill"></i> 
                    </a>
                    <a href="/usuarios" class="btn btn-secondary m-1" tabindex="2" title="Voltar">
                        <i class="bi bi-arrow-return-left"></i>
                    </a>
                </div>
            </div>    
        </div>
        <footer>
            <%- include('../../partials/footer'); %>
